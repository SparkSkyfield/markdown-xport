    "48": "images/48x48.png",
    "32": "images/32x32.png",
    "16": "images/16x16.png"
  },
  "permissions": ["contextMenus", "storage"],
  "background": {
        "scripts": ["chrome/markdown-xport.js"]
  },
  "browser_action": {
